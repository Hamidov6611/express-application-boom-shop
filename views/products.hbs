{{#if myProduct.length}}
	<div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 '>
		{{#each myProduct}}
			<div class='col '>
				<div class='card shadow-sm '>
					<img height="250" src='{{image}}' />
					<div class='card-body'>
						<p class='card-text fw-bold'>{{title}}</p>
						<p class='card-text wrap p-1'>{{description}}</p>
						<div class='d-flex justify-content-between align-items-center'>
							<div class='d-flex gap-2 align-items-center'>
								<div class='avatar bg-primary'>
									<p>{{getFullNameFirstCharacter user.firstname user.lastname}}</p>
								</div>
								<p class='m-0 p-0'>{{user.firstname}} {{user.lastname}}</p>
							</div>
							<small class='text-muted fs-5'>{{price}}.00$</small>
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{else}}
	<p>No product</p>
{{/if}}